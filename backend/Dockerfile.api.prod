# --- Build stage ---
FROM golang:1.25.3-alpine AS builder

WORKDIR /src

ENV CGO_ENABLED=0

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN go build -trimpath -ldflags="-s -w" -o /out/api ./cmd/api

# --- Runtime stage ---
FROM alpine:3.20

WORKDIR /app

RUN apk add --no-cache ca-certificates

ENV GIN_MODE=release

COPY --from=builder /out/api /usr/local/bin/api

EXPOSE 8080

CMD ["api"]

